<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link type="text/css" rel="stylesheet" href="~/Content/sprk.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/sprk.font-awesome.min.css" />

        <title>@ViewBag.Title - Sitecore Publish Reporting Kit</title>
    </head>
    <body>

        <div class="container">
            <h1>Sitecore Publish Reporting Kit (SPRK)</h1>
        </div>

        <div class="container">
            <a href="/sitecore/sprk/Report/PublishLogs" class="btn default"><i class="fa fa-th-list" aria-hidden="true"></i> Publish Logs</a>
            <a href="/sitecore/sprk/Report/IncrementalPublishQueue" class="btn default"><i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i> Incremental Publish Queue</a>
        </div>

        <div class="container">
            <h2>@ViewBag.Title</h2>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="container">
                <div class="message error">@TempData["Error"]</div>
            </div>
        }

        <div class="container content">
            @RenderBody()
        </div>

        <script src="~/Scripts/sprk.tablesort.min.js"></script>

        @RenderSection("PageScripts", required: false)

    </body>
</html>